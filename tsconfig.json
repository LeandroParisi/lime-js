{
    "compilerOptions": {
        "out": "lime.js",
        "target": "es5",
        "sourceMap": true,
        "rootDir": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [
        "node_modules",
        "lime.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
